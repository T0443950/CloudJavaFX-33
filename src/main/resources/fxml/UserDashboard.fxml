<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.student.cloudjavafx.UserDashboardController">
    <!-- Add CSS styling for the interface -->
    <stylesheets>
        <URL value="@/styles/admin.css" />
    </stylesheets>

    <!-- Top Section - Header with Logout -->
    <top>
        <HBox alignment="CENTER_LEFT" style="-fx-background-color: #2c3e50; -fx-padding: 10;" styleClass="top-bar">
            <padding>
                <Insets bottom="15" left="20" right="20" top="15" />
            </padding>
            <Label style="-fx-text-fill: white; -fx-font-size: 20; -fx-font-weight: bold;" styleClass="app-title" text="Dashboard">
                <font>
                    <Font size="22.0" />
                </font>
            </Label>
            <Region HBox.hgrow="ALWAYS" />
            <Button onAction="#logout" styleClass="logout-button" text="Logout">
                <font>
                    <Font size="14.0" />
                </font>
            </Button>
        </HBox>
    </top>

    <!-- Left Section - Navigation Buttons (Sidebar) -->
    <left>
        <VBox alignment="TOP_CENTER" prefWidth="230.0" spacing="15" styleClass="sidebar">
            <padding>
                <Insets bottom="15" left="15" right="15" top="30" />
            </padding>
            <Button fx:id="btnflie" onAction="#manageFiles" prefWidth="200" styleClass="sidebar-button" text="Files" />
        </VBox>
    </left>

    <!-- Center Section - Main Content Area (Placeholder) -->
    <center>
        <StackPane fx:id="contentPane" styleClass="main-content-area">
            <padding>
                <Insets bottom="20" left="20" right="20" top="20" />
            </padding>
            <!-- A more prominent and styled welcome message -->
            <VBox alignment="CENTER" spacing="20">
                <Label styleClass="welcome-title" text="Welcome, Cloud Load Balancing System!">
                    <font>
                        <Font size="24.0" />
                    </font>
                </Label>
                <Label styleClass="welcome-subtitle" text="Select an option from the sidebar to manage your cloud system.">
                    <font>
                        <Font size="16.0" />
                    </font>
                </Label>
            </VBox>
        </StackPane>
    </center>

    <!-- Bottom Section - Status Bar -->
    <bottom>
        <Label fx:id="statusLabel" styleClass="status-bar" text="Ready.">
            <padding>
                <Insets bottom="10" left="15" right="15" top="10" />
            </padding>
        </Label>
    </bottom>
</BorderPane>
